<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/item_app_list_key"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/floatingKey"/>

    <com.lollipop.windowslauncher.views.IconImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iconView"
        app:layout_constraintLeft_toRightOf="@id/floatingKey"
        app:layout_constraintBottom_toBottomOf="@id/floatingKey"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:background="#00F" />

    <TextView
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/nameView"
        app:layout_constraintLeft_toRightOf="@id/iconView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/iconView"
        app:layout_constraintBottom_toBottomOf="@id/iconView"
        android:lines="1"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="@string/app_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>